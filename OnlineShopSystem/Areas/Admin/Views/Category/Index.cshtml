
@model PagedList.IPagedList<Model.EF.Category>
@using PagedList.Mvc
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layouts.cshtml";
}
@section header{
    Trang Chu Danh Muc
}
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                Danh sach nguoi dung
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <div class="table-responsive">
                    @using (Html.BeginForm("Index", "Category", FormMethod.Get))
                    {
                        <div class="col-md-4">
                                <div class="form-group input-group">
                                    <input type="text" name="searchString" value="@ViewBag.searchString" class="form-control">
                                    <span class="input-group-btn">
                                        <button class="btn btn-default" type="submit">
                                            <i class="fa fa-search"></i>
                                        </button>
                                    </span>
                                </div>
                            </div>
                    }

                    <table class="table table-striped table-bordered table-hover">
                        <thead>
                            <tr>
                                <th> #</th>
                                <th>ID</th>
                                <th>Ten Danh Muc</th>
                                <th>Ngay Tao </th>
                                <th>Trang Thai</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr id="row_@item.ID">
                                    <td>
                                        <a href="/Admin/Category/Edit/@item.ID">Sua</a>|
                                        @Ajax.ActionLink("Xoa", "Delete", new AjaxOptions
                                   {
                                       Confirm = "Ban co chac chan muon xoa",
                                       OnComplete = "$('#row_" + item.ID + "').Remove()",
                                       HttpMethod = "Delete"
                                   })
                                    </td>
                                    <td>@item.Name</td>
                                    <td>@item.CreateDate</td>
                                    <td>@item.Status</td>
                                </tr>
                            }


                        </tbody>
                    </table>
                   @Html.PagedListPager(Model, page => Url.Action("Index", new { page, @searchString = ViewBag.searchString }))
                </div>
                <!-- /.table-responsive -->
            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-6 -->

</div>

