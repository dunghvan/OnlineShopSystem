@model PagedList.IPagedList<Model.EF.Slide>
@using PagedList.Mvc
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layouts.cshtml";
}

@section header{
    Trang chu Slide
}
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                Danh sach nguoi dung
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <div class="table-responsive">
                    @using (Html.BeginForm("Index", "Slide", FormMethod.Get))
                {
                    <div class="row form-group">
                    <div class="col-md-12">
                        <div class="col-md-4">
                            <input type="text" name="searchString" value="@ViewBag.searchString" class="form-control">
                            </div>
                            <div class="col-md-4">
                                <button type="submit" class="btn btn-success">Tim Kiem</button>
                                <a href="/Admin/Slide/Create" class="btn btn-primary">Them moi</a>
                            </div>

                    </div>
                        </div>
                    }
                    <table class="table table-striped table-bordered table-hover">
                        <thead>
                            <tr>
                                <th> #</th>
                                <th>ID</th>
                                <th>Display Order </th>
                                <th>Link</th>
                                <th>Mo Ta</th>
                                <th>Trang Thai</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
            {
                <tr id="row_@item.ID">
                    <td>
                        <a href="/Admin/Slide/Edit/@item.ID">Sua</a>|
                        @Ajax.ActionLink("Xoa", "Delete", new { @id = item.ID }, new AjaxOptions
        {
            Confirm = "Ban co chac chan muon xoa ?",
            OnComplete = "$('#row_" + @item.ID + "').remove()",
            HttpMethod = "Delete"

        })
                    </td>
                    <td>@item.ID</td>
                    <td>@item.DisplayOrder</td>
                    <td>@item.Link</td>
                    <td>@item.Description</td>
                    <td>@item.Status</td>
                </tr>
}


                        </tbody>
                    </table>
                    @Html.PagedListPager(Model, page => Url.Action("Index", new { page }))
                </div>
                <!-- /.table-responsive -->
                </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-6 -->

</div>


