@model Model.ViewModel.ProductViewModel
@{
    ViewBag.Title = "ViewDetail";
    Layout = "~/Areas/Admin/Views/Shared/_Layouts.cshtml";
}
@section header{
    Product Detail

}
@section topCss{

    <link href="~/Assets/Client/css/bootstrap-theme.min.css" rel="stylesheet" />
}

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                Product Detail
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <td></td>
                            <td></td>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <th scope="row" class="col-lg-3">商品コード</th>
                            <td>@Model.ID</td>
                        </tr>
                        <tr>
                            <th scope="row">商品名</th>
                            <td>@Model.Name</td>
                        </tr>
                        <tr>
                            <th scope="row">メータタイトル</th>
                            <td>@Model.MetaTitle</td>
                        </tr>
                        <tr>
                            <th scope="row">説明</th>
                            <td>@Html.Raw(Model.Description)</td>
                        </tr>
                        <tr>
                            <th scope="row">写真</th>
                            <td><img width="100px" src="@Model.Image" /></td>
                        </tr>
                        <tr>
                            <th scope="row">値段</th>
                            <td>@Model.Price</td>
                        </tr>
                        <tr>
                            <th scope="row">プロモーション値段 Price</th>
                            <td>@Model.PromotionPrice</td>
                        </tr>
                        <tr>
                            <th scope="row">数量</th>
                            <td>@Model.Quanlity</td>
                        </tr>
                        <tr>
                            <th scope="row">カテゴリー</th>
                            <td>@Model.CategoryName</td>
                        </tr>
                        <tr>
                            <th scope="row">詳細</th>
                            <td>@Html.Raw(Model.Detail)</td>
                        </tr>
                        <tr>
                            <th scope="row">保証</th>
                            <td>@Model.Warranty</td>
                        </tr>
                        <tr>
                            <th scope="row">作成者</th>
                            <td>@Model.CreateBy</td>
                        </tr>
                        <tr>
                            <th scope="row">作成日時</th>
                            <td>@ViewBag.EditBy</td>
                        </tr>
                        <tr>
                            <th scope="row">編集者</th>
                            <td>@Model.ModifiedBy</td>
                        </tr>
                        <tr>
                            <th scope="row">編集日時</th>
                            <td>@Model.ModifiedDate</td>
                        </tr>
                        <tr>
                            <th scope="row">メータ説明</th>
                            <td>@Model.MetaDescriptions</td>
                        </tr>
                        <tr>
                            <th scope="row">メータキワード</th>
                            <td>@Model.MetaKeywords</td>
                        </tr>
                        <tr>
                            <th scope="row">トップホット</th>
                            <td>@Model.TopHot</td>
                        </tr>
                        <tr>
                            <th scope="row">ビュー数</th>
                            <td>@Model.ViewCount</td>
                        </tr>
                        <tr>
                            <th></th>
                            <td>
                                <a href="/Admin/Product/Edit/@Model.ID" class="btn btn-danger">Edit</a>
                                <a href="/Admin/Product/" class="btn btn-success">Back to List</a>
                            </td>
                        </tr>
                    </tbody>
                       </table>

            </div>
           
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-6 -->

</div>
