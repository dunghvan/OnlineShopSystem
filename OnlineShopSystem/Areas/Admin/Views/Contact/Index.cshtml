@model List<Model.EF.Contact>
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layouts.cshtml";
}
@section header{
    Trang chu lien he
}
@section jsFooter{
    <script src="~/Assets/Admin/js/controller/contactController.js"></script>
}
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                Danh sach Tin tuc
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <div class="table-responsive">

                    <table class="table table-striped table-bordered table-hover">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Noi dung</th>
                                <th>Trang thai</th>
                                <td>Chinh sua</td>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr id="row_@item.ID">
                                    <td>
                                        <a href="/Admin/Contact/Edit/@item.ID">Edit</a>
                                        @Ajax.ActionLink("Xoa", "Delete", new AjaxOptions
                                        {
                                            Confirm = "Ban co chac chan muon xoa",
                                            OnComplete = "$('#row_" + item.ID + "').Remove()",
                                            HttpMethod = "Delete"
                                        })
                                    </td>
                                    <td>@item.ID</td>
                                    <td>@item.Content</td>
                                    <td><a href="#" class="btn-active" data-id="@item.ID">@(item.Status ? "Kich Hoat" : "Khoa")</a></td>
                                </tr>
                            }




                        </tbody>
                    </table>

                </div>
                <!-- /.table-responsive -->
            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-6 -->

</div>

